<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.auth.AuthFragment1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/otp_send" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center_horizontal"
                android:text="Mobile Verification"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/headingTextSize"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:text="Please enter your mobile number to login."
                android:textSize="@dimen/mediumTextSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_background_focused"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/india_flag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="@string/indian_phone_code"
                    android:textColor="@color/colorTextUnImportant"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorTextUnImportant" />

                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@null"
                    android:hint="@string/phone_number"
                    android:inputType="number"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="normal" />

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/send_otp"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="24dp"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:text="Send OTP"
                android:textColor="@color/colorWhite"
                app:icon="@drawable/check_ic"
                app:iconGravity="textEnd"
                app:iconPadding="8dp"
                app:iconTint="@color/colorWhite" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="By signing up for the services, you automatically accept our terms and conditions"
            android:textSize="@dimen/smallTextSize" />

    </RelativeLayout>

</layout>