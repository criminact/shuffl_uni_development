<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.addproduct.ProductAddFragment2">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/gallery_image"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:text="Upload Pictures"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/smallTextSize"
            app:icon="@drawable/gallery_ic"
            app:iconGravity="textEnd"
            app:iconTint="@color/colorWhite" />

        <LinearLayout
            android:layout_marginVertical="20dp"
            android:id="@+id/images_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gallery_image"
            android:layout_marginHorizontal="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/one_image"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/two_image"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/three_image"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:visibility="visible" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/upload"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@id/images_layout"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:text="Upload"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            app:icon="@drawable/check_double_ic"
            app:iconGravity="textEnd"
            app:iconPadding="8dp"
            app:iconTint="@color/colorWhite" />

    </RelativeLayout>

</layout>