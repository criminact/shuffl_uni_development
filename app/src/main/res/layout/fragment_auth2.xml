<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.auth.AuthFragment2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/otp_verify" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center_horizontal"
                android:text="Verification Code"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/headingTextSize"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:text="Please enter your otp to continue."
                android:textSize="@dimen/mediumTextSize" />

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorAccent"
                app:bar_active_color="@color/colorPrimary"
                app:bar_enabled="true"
                app:bar_error_color="@color/colorError"
                app:bar_height="2dp"
                app:bar_inactive_color="@color/colorAccent"
                app:height="40dp"
                app:length="6"
                app:otp_text_size="@dimen/mediumTextSize"
                app:width="40dp" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:text="Confirm OTP"
                android:textColor="@color/colorWhite"
                app:icon="@drawable/check_double_ic"
                app:iconGravity="textEnd"
                app:iconPadding="8dp"
                app:iconTint="@color/colorWhite" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="By signing up for the services, you automatically
accept our terms and conditions"
            android:textSize="@dimen/smallTextSize" />

    </RelativeLayout>

</layout>