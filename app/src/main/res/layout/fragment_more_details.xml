<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.auth.MoreDetailsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/uni" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center_horizontal"
                android:text="University Authentication"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/headingTextSize"
                android:layout_marginVertical="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:text="Please select your university."
                android:textSize="@dimen/mediumTextSize" />

            <Button
                android:id="@+id/choose_uni"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorAccent"
                android:text="Choose University" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/next_more_details"
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:text="Next"
                android:textColor="@color/colorWhite"
                app:icon="@drawable/check_ic"
                app:iconGravity="textEnd"
                app:iconPadding="8dp"
                app:iconTint="@color/colorWhite" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:textSize="@dimen/smallTextSize"
            android:text="By signing up for the services, you automatically
accept our terms and conditions" />

    </RelativeLayout>

</layout>